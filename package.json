    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.2",
    "react": "^16.14.0",
    "react-apollo": "^3.1.5",
    "react-dom": "^16.14.0",
    "react-scripts": "4.0.1",
