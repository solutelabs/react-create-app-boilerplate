{
  "name": "liminal-web-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.3.2",
    "@apollo/react-hooks": "^4.0.0",
    "apollo-client": "^2.6.10",
    "apollo-link-context": "^1.0.20",
    "apollo-link-http": "^1.5.17",
    "autoprefixer": "^9.8.6",
    "classnames": "^2.2.6",
    "env-cmd": "^10.1.0",
